@{
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}



@model IEnumerable<E_WORKERS.Models.Table_Products>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
<p>
    <a class="btn btn-primary glyphicon glyphicon-pencil" href="@Url.Action("Create","Table_Products")">Create New</a>

</p>
<table class="table">
    <tr>

        <th>
            Product Name
        </th>
        <th>
            Product Image
        </th>
        <th>
            Product Description
        </th>
        <th>
            Product SalePrice
        </th>
        <th>
            Product PurchasePrice
        </th>
        <th>Category_Product_FID </th>

    </tr>

    @foreach (var products in Model)
    {
        <tr>


            <td>
                @products.Products_Name
            </td>
            <td>
                <img src="@Url.Content(products.Products_Image)" width="100" height="100"/>
            </td>
            <td>
                @products.Products_Description
            </td>
            <td>
                @products.Products_SalePrice
            </td>
            <td>
                @products.Products_PurchasePrice
            </td>
            <td>
                @products.Table_Categories_Product.Categories_Product_Name
            </td>
            <td>
                <a class="btn btn-primary glyphicon glyphicon-edit" href="@Url.Action("Edit","Table_Products",new {id=products.Products_ID})">Edit</a> |
                <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details","Table_Products",new {id=products.Products_ID})">Detail</a> |
                <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete","Table_Products",new {id=products.Products_ID})">Delete</a> |


            </td>
        </tr>
    }

</table>