
@using E_WORKERS.Models
@model E_WORKERS.Models.Table_Customer

@{


    Layout = "~/Views/Shared/_layoutcustomer.cshtml";

    Model1 db = new Model1();
}

@Html.Raw(ViewBag.msg);





<style>

    body {
        padding: 70px;
    }


    .btn {
        display: inline-block;
        font-size: 16px;
        font-family: 'Raleway', sans-serif;
        font-weight: 800;
        color: #ffffff;
        text-transform: uppercase;
        background: #e1c12e;
        padding: 10px 30px;
        transition: all 0.5s ease 0s;
        border-color: white
    }

    .footer-bottom {
        width: 100%;
        margin: 0;
        position: absolute;
        bottom: 0;
        left: 0;
    }
</style>



<div class="page-header__title">
    <h1>My Account</h1>
</div>

<div class="block">
    <div class="container">
        <div class="row">
            <div class="col-md-6 d-flex flex-column">
                <div class="card flex-grow-1 mb-md-0">
                    <div class="card-body">
                        <h3 class="card-title">Login</h3>
                        <form method="post" action="/Home/AccountLogin/">
                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" class="form-control" name="Customer_Email" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="Customer_Password" placeholder="Password">
                                <small class="form-text text-muted"><a href="#">Forgotten Password</a></small>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <span class="form-check-input input-check">
                                        <span class="input-check__body">
                                            <input class="input-check__input" type="checkbox" id="login-remember">
                                            <span class="input-check__box"></span>
                                            <svg class="input-check__icon" width="9px" height="7px">
                                                <use xlink:href="images/sprite.svg#check-9x7"></use>
                                            </svg>
                                        </span>
                                    </span>
                                    <label class="form-check-label" for="login-remember">Remember Me</label>
                                </div>
                            </div>
                            <button type="submit" class="btn  mt-4">Login</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6 d-flex flex-column mt-4 mt-md-0">
                <div class="card flex-grow-1 mb-0">
                    <div class="card-body">
                        <h3 class="card-title">Register</h3>
                        <form method="post" action="/Home/AccountLogin/">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName">Name</label>
                                    <input type="text" class="form-control" name="Customer_Name" id="firstName" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        Valid first name is required.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="password">Pasword</label>
                                    <input type="text" class="form-control" name="Customer_Password" id="password" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        Valid password is required.
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="email">Email </label>
                                    <input type="email" class="form-control" name="Customer_Email" id="email" placeholder="you@example.com">
                                    <div class="invalid-feedback">
                                        Please enter a valid email address for shipping updates.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="phone">Phone</label>
                                    <input type="tel" class="form-control" name="Customer_Phone" id="phone" placeholder="phone">

                                </div>




                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="address">Address</label>
                                    <input type="text" class="form-control" name="Customer_Address" id="address" placeholder="1234 Main St" required>
                                    <div class="invalid-feedback">
                                        Please enter your shipping address.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3 form-group" >
                                    <label for="city">City</label>
                                    <div>
                                        @Html.DropDownList("City_FID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.City_FID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                            <button type="submit" class="btn  mt-4">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>