

@using E_WORKERS.Models
@{
    Layout = "~/Views/Shared/_layoutcustomer.cshtml";
    Model1 db = new Model1();
}
<!-- Page Header Section breadcumb Start Here -->
<div class="page-header-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                <div class="header-page">
                    <h2>Workers Profile</h2>
                    <ul>
                        <li> <a href="@Url.Action("Indexcustomer","")">Home</a> </li>
                        <li>Workers</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header Section breadcumb End Here -->
<!-- team area start here -->
<div class="team-area">
    <div class="container">
        <div class="row">
            <div class="team-list">
                <div class="col-lg-4 ">
                    <div class="sidebar-area">
                        <div class="widget">
                            <h2 class="widget-title">Search</h2>
                            <div class="search-box">
                                <div class="col-sm-12 ">
                                    <form class="search-form">
                                        <div class="form-group has-feedback">
                                            <input type="text" class="form-control" name="search" placeholder="Search..">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="widget widget_categories">
                            <h2 class="widget-title">Services</h2>
                            <ul>
                                <li><a href="#" style="font-weight:bold">All Services   <span class="count">( @db.Table_Service.Count() )</span></a></li>
                            </ul>
                            @foreach (var service in db.Table_Service)
                            {

                                <ul>
                                    <li><a href="#" style="font-weight:bold">@service.Service_Name   <span class="count">(@service.Table_Categories.Count())</span></a></li>
                                </ul>

                            }
                        </div>


                    </div>
                </div>



                @foreach (var worker in db.Table_Worker)
                {
                   
                    <div class="col-lg-4">
                        <div class="single-member">
                            <div class="member-img">
                                <a href="#"> <img style="width:100%;height:300px" src="@Url.Content(worker.Worker_Image)" alt="worker"></a>
                                <div class="member-content">
                                    <div class="member-info">
                                        <div class="title">
                                            <h3>
                                                <a href="#">About Worker</a>
                                                <span>

                                                    @worker.Worker_Name
                                                </span>
                                                <span class="fa fa-phone"> + @worker.Worker_Phone</span>
                                                <span class="fa fa-envelope-o"> @worker.Worker_Email</span>
                                                <span> @worker.Worker_Address</span>
                                                <span> @worker.Table_City.City_Name</span>
                                            </h3>

                                        </div>


                                        <div class="member-social">
                                            <ul>
                                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="member-name">
                                <h3>WORKER</h3>

                            </div>



                        </div>
                    </div>
                }
               




            </div>
        </div>
    </div>
</div>
<!-- team area start here -->
